<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>Todo List</title>
  </head>
  <body class="" style="background-color: bisque">
    <div class="container">
      <div class="d-flex flex-column justify-content-center align-items-center p-5">
        <h1 class="text-center">Todo List</h1>

        <div class="mt-5" style="width: 500px">
          <form action="/addNewTodo" method="post">
            <table class="table table-dark table-striped">
              <tbody>
                <tr>
                  <td>
                    <input class="form-control" type="text" name="todo" value="<%= isUpdate ? data.task : '' %>" />
                  </td>
                </tr>
                <tr>
                  <td><input type="submit" value="<%= isUpdate ? 'Edit' : 'Add' %>" /></td>
                </tr>
              </tbody>
            </table>
          </form>
        </div>

        <div class="mt-5" style="width: 500px">
          <table class="table table-dark table-striped">
            <thead>
              <th>No.</th>
              <th style="width: 60%">Todo</th>
              <th>Action</th>
            </thead>
            <tbody>
              <% todoList.map((todo,id)=>{ %>
              <tr>
                <td><%= id+1 %></td>
                <td><%= todo.task %></td>
                <td>
                  <a class="btn btn-primary" href="/editTodo?todoId=<%=id%>">Edit</a>
                  <a class="btn btn-danger" href="/deleteTodo?todoId=<%=id%>">Delete</a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
